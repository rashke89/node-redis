<h1>Add User</h1>
{{#if error}} <span> {{error}} </span>{{/if}}
<form  method="POST" action="/user/add">
    <div class="fomr-group">
        <label for="id">ID:</label>
        <input type="text" name="id" class="form-control" placeholder="Type ID...">
    </div>
    <div class="fomr-group">
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" class="form-control" placeholder="Type First Name...">
    </div>
    <div class="fomr-group">
        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" class="form-control" placeholder="Type Last Name...">
    </div>
    <div class="fomr-group">
        <label for="email">Email:</label>
        <input type="text" name="email" class="form-control" placeholder="Type Email...">
    </div>
    <div class="fomr-group">
        <label for="phone">Phone:</label>
        <input type="text" name="phone" class="form-control" placeholder="Type Phone...">
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>